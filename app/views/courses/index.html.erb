<div ng-controller='CourseCtrl'>
  <button ng-click='addCourse = true'>Add New Course</button>
  <form ng-show='addCourse' ng-submit='addNew()'>
    <div>Course Title</div>
    <input type='text' ng-model='newCourse.title' />
    <div>Course Description</div>
    <textarea ng-model='newCourse.content'></textarea>
    <div>Url to Course Webpage</div>
    <input type='text' ng-model='newCourse.link' /><br />
    <input type='submit' value='Submit New Course' />
  </form>
  <div ng-repeat='course in courses'>
    <h4>{{course.title}}</h4>
    <p>{{course.content}}</p>
    <a href='{{course.link}}'>Course Page</a>
  </div>
</div>
